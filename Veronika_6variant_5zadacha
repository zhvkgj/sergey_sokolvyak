#include "stdafx.h"
#include <iostream>
using namespace std;

void stepuxa(int a,int b,int c,int d);
int R = 1485;

int main()
{
	setlocale(LC_ALL, "");
	int a, b, c, d;
	for (int i = 0; i != 20; i++) {
		cout << "Введите оценки студента за сессию:";
		cin >> a >> b >> c >> d;
		stepuxa(a, b, c, d);
	}
	system("pause");
    return 0;
}

void stepuxa(int a, int b, int c, int d) {
	if (a < 4 || b < 4 || c < 4 || d < 4) {
		cout << "В следующем семестре этот студент не получает стипендию.";
		}	
	else {
		if (a < 5 || b < 5 || c < 5 || d < 5)
			cout << "Этому студенту будет выплачиваться стипендия в размере: " << R << '\n';
		else
			cout << "Этот студенту будет выплачиваться повышенная стипендия в размере : " << R * 1.25 << '\n';
		}
}
