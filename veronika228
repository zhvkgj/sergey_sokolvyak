#include "stdafx.h"
#include <iostream>
#include <cmath>
using namespace std;
float f(float x) {
	return (x*x*x - (3 * x*x) - 10); // твоя функция f(x)
}
float n(float a, float b, float eps)
{ 
	float x = (a + b) / 2;
	while (fabs(f(x)) > eps)      
		if (f(b) * f(x) > 0)
		{
			b = x;
			x = (b + a) / 2;
		}
		else
		{
			a = x;
			x = (b + a) / 2;
		};
	return x;
}
int main()
{
	float a, b;
	cin >> a;
	cin >> b;
	cout << n(a, b, 0.001);
	system("pause");
	return 0;
}
