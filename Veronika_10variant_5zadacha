#include "stdafx.h"
#include <iostream>
#include <cmath>
using namespace std;

int main()
{
	//1 min = 6 градусам на минутной стрелке
	//1 min = 0.5 градусам на часовой
	//1 h = 30 градусам на часовой
	setlocale(LC_ALL, "rus");
	int hours, minutes;
	float ugol;
	cout << "Введите кол-во часов:";
	cin >> hours;
	cout << "Введите кол-во минут:";
	cin >> minutes;
	if (minutes > 60 || minutes < 0 || hours > 24 || hours < 0) { 
		cout << "Вы ввели некорретные данные:" << endl;
		return 1;
		}
	hours = hours % 12;				
	ugol = abs((hours*30 + 0.5*minutes) - minutes*6); //модуль разности градусной меры поворота часовой и минутной стрелки
	if (ugol > 180) {			
		ugol = 360 - ugol;
		}
	cout << "Угол равен:" << ugol;
	system("pause");
	return 0;
    
}
